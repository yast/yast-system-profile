textdomain "system-profile";


string MONTHLYCHECKBOX = _("Automatically send system profile monthly (recommended)");

/**
 * All descriptions are here
 */
map DESC = $[
    "short" : _("Driver development is prioritized based on hardware popularity.\nPlease send your system profile to influence this work."),
    "long"  : _("Driver development is prioritized based on hardware popularity.\nPlease send your system profile to a community database to help\ncreating current statistics."),
    "smolt" : _("Driver development is prioritized based on hardware popularity.\nThe community project smolt creates statistics from contributed\nsystem profiles. Please send your system profile to support smolt.")
];


/**
 * All titles are here
 */
map TITLES = $[
    "smolt"             : _("Smolt"),
    "smoltProject"      : _("Smolt Project"),
